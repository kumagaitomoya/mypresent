
<%= form_with model:@user, url:user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap2'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      招待状入力
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
   <div class="form-group2">
     <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
     </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"test@gmail.com", autofocus: true %>
   </div>
  <div class="form-group2">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"a123456" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>


